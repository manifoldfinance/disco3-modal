{
    "compilerOptions": {
        "outDir": "./dist/",
        "noImplicitAny": true,
        "module": "commonjs",
        "lib": [
            "es7",
            "dom"
        ],
        "target": "es5",
        "jsx": "react",
        "allowJs": true,
        "sourceMap": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "declaration": true
    },
    "include": [
        "src/**/*",
        "custom.d.ts"
    ],
    "exclude": [
        "node_modules",
        "src/stories"
    ]
}